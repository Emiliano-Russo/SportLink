{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "target": "esnext", // Asegúrate de tener un target moderno
    "moduleResolution": "node", // Resuelve módulos desde node_modules
    "allowSyntheticDefaultImports": true, // Soporte para imports por defecto
    "baseUrl": ".", // Configura la base para rutas relativas
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "index.ts",
    "index.tsx",
    "App.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
